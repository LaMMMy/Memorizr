<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?colorPrimary"
    tools:context="com.bensonius.memorizr.app.InputFragment">

        <EditText android:id="@+id/fullscreen_content"
            android:inputType="textMultiLine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:keepScreenOn="true"
            android:textColor="@color/memorizr_colourTextDark"
            android:textSize="@dimen/memorizr_text_size"
            android:layout_marginBottom="40dp"
            android:gravity="top|left"
            android:text="When I was young and in my Prime.\n I left my home in Caroline\n Now all I do is sit and Pine\n For all those Folks I left behind." />

        <Button android:id="@+id/memorize_text_button"
            android:background="@drawable/primary_round"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="MemorizeTextButtonOnButtonClick"
            android:text="Memorize"
            android:stateListAnimator="@null"
            android:layout_below="@+id/fullscreen_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="66dp" />

        <Button android:id="@+id/save_text_button"
            android:background="@drawable/primary_round"
            android:shadowRadius="20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="SaveFileButtonOnButtonClick"
            android:text="Save File"
            android:stateListAnimator="@null"
            android:layout_alignTop="@+id/memorize_text_button"
            android:layout_toEndOf="@+id/memorize_text_button"
            android:layout_marginStart="56dp" />

</RelativeLayout>
